{
  "name": "@dcapslock/hass-jest-environment",
  "version": "1.0.0",
  "description": "A Jest environment for testing against a real Home Assistant instance using WebSocket connection with long-lived access tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "home-assistant",
    "jest",
    "testing",
    "environment",
    "websocket",
    "hass",
    "testing-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dcapslock/hass-jest-environment.git"
  },
  "author": "dcapslock",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "jest": ">=27.0.0"
  },
  "dependencies": {
    "home-assistant-js-websocket": "^9.6.0",
    "jest-environment-node": "^29.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
